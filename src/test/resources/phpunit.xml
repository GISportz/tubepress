<phpunit
    colors="true"
    stopOnError="false"
    stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	strict="true"
    processIsolation="false"
    bootstrap="../php/bootstrap.php">
	<testsuites>
	   <testsuite name="TubePress tests">
	       <directory>../php/addons/wordpress</directory>
	   </testsuite>
	</testsuites>
    <filter>
        <whitelist>
           <directory suffix=".php">../../main/php</directory>
            <exclude>
                <file>../../main/php/scripts/ajaxEndpoint.php</file>
            </exclude>
        </whitelist>

    </filter>
</phpunit>
