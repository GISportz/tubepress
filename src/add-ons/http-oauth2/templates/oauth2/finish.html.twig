{% extends 'oauth2/bootstrap.html.twig' %}

{% block body %}

    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{ 'Successfully connected to %s.' | trans | format(provider.displayName) }} {# >(translatable)< #}
            </h3>
        </div>
        <div class="panel-body text-muted small">
            {{ 'This window will close automatically.' | trans }}   {# >(translatable)< #}
        </div>
    </div>

    <script type="text/javascript">
        window.__tubePressSlug = "{{ slug }}";
    </script>

{% endblock body %}