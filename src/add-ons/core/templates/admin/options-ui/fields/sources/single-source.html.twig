<div class="panel panel-default js-gallery-source-outermost">

    <div class="panel-heading" role="tab" id="headingOne">

        <h4 class="panel-title">

            {% include 'options-ui/fields/sources/single-source-title-bar.html.twig' %}

        </h4>{# .panel-title #}

    </div>{# .panel-heading #}

    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">

        <div class="panel-body row">

            <div class="col-xs-3 col-lg-2"> <!-- required for floating -->

                <ul class="nav nav-tabs tabs-left">

                    <li class="active">
                        <a href="#home" data-toggle="tab">
                            <span class="glyphicon glyphicon-film" aria-hidden="true"></span> Source
                        </a>
                    </li>
                    <li>
                        <a href="#profile" data-toggle="tab">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Options
                        </a>
                    </li>
                </ul>
            </div>{# .col-xs-3 .col-lg-2 #}

            <div class="col-xs-9 col-lg-10">

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="home">

                        {% include 'options-ui/fields/sources/single-source-tab-selection.html.twig' %}
                    </div>
                    <div class="tab-pane" id="profile">

                        {% include 'options-ui/fields/sources/single-source-tab-options.html.twig' %}
                    </div>
                </div>

            </div>{# .col-xs-9 .col-lg-10 #}

        </div>{# .panel-body #}
    </div>{# .panel-collapse #}
</div>{# .panel .panel-default #}