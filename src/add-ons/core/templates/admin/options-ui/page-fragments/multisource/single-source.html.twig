<div class="panel panel-default js-multisource-single-source-outermost" data-multisourceid="{{ source.id }}">

    {% set headingId = "multisource-" ~ source.id ~ "-heading" %}
    {% set contentAreaId = "multisource-" ~ source.id ~ "-contentArea" %}
    {% set sourceSelectionAreaId = "multisource-" ~ source.id ~ "-sourceSelectionArea" %}
    {% set feedOptionsAreaId = "multisource-" ~ source.id ~ "-feedOptions" %}

    <div class="panel-heading" role="tab" id="{{ headingId }}">

        <h4 class="panel-title">

            {% include 'options-ui/page-fragments/multisource/single-source-title-bar.html.twig' %}

        </h4>{# .panel-title #}

    </div>{# .panel-heading #}

    <div id="{{ contentAreaId }}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="{{ headingId }}">

        <div class="panel-body row">

            <div class="col-xs-3 col-lg-2"> <!-- required for floating -->

                <ul class="nav nav-tabs tabs-left">

                    <li class="active">
                        <a href="#{{ sourceSelectionAreaId }}" data-toggle="tab">
                            <span class="glyphicon glyphicon-film" aria-hidden="true"></span> Source
                        </a>
                    </li>
                    <li>
                        <a href="#{{ feedOptionsAreaId }}" data-toggle="tab">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Options
                        </a>
                    </li>
                </ul>
            </div>{# .col-xs-3 .col-lg-2 #}

            <div class="col-xs-9 col-lg-10">

                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="{{ sourceSelectionAreaId }}">

                        {% include 'options-ui/page-fragments/multisource/single-source-tab-selection.html.twig' %}

                    </div>
                    <div class="tab-pane" id="{{ feedOptionsAreaId }}">

                        {% include 'options-ui/page-fragments/multisource/single-source-tab-options.html.twig' %}

                    </div>
                </div>

            </div>{# .col-xs-9 .col-lg-10 #}

        </div>{# .panel-body #}
    </div>{# .panel-collapse #}
</div>{# .panel .panel-default #}
