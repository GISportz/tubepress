{
    "name"        : "tubepress/tubepress",
    "description" : "Modern video galleries for the web.",
    "homepage"    : "https://github.com/tubepress/tubepress",
    "license"     : "MPL-2.0",
    "authors" : [
        {
            "name"     : "TubePress LLC",
            "email"    : "eric@tubepress.org",
            "homepage" : "http://tubepress.com"
        }
    ],
    "require": {
        "ehough/chaingang"   : "~1.0.0",
        "ehough/contemplate" : "~1.0.0",
        "ehough/epilog"      : "~1.7",
        "ehough/finder"      : "~2.4.0",
        "ehough/iconic"      : "~2.4.0",
        "ehough/pulsar"      : "~2.4.0",
        "ehough/stash"       : "~0.10",
        "ehough/tickertape"  : "~2.4.0",
        "puzzlehttp/puzzle"  : "~4.0"
    },
    "require-dev": {
        "ehough/mockery"       : "~0.8",
        "phpunit/phpunit"      : "3.7.*",
        "symfony/class-loader" : "dev-master"
    },
    "autoload": {
        "psr-0": {
            "tubepress_addons_core"      : "src/main/php/add-ons/core/classes",
            "tubepress_addons_embedplus" : "src/main/php/add-ons/embedplus/classes",
            "tubepress_addons_jwplayer"  : "src/main/php/add-ons/jwplayer/classes",
            "tubepress_addons_puzzle"    : "src/main/php/add-ons/puzzle/classes",
            "tubepress_addons_vimeo"     : "src/main/php/add-ons/vimeo/classes",
            "tubepress_addons_wordpress" : "src/main/php/add-ons/wordpress/classes",
            "tubepress_addons_youtube"   : "src/main/php/add-ons/youtube/classes",
            "tubepress_api"              : "src/main/php/classes",
            "tubepress_impl"             : "src/main/php/classes",
            "tubepress_plugins"          : "src/main/php/deprecated/classes",
            "tubepress_spi"              : "src/main/php/classes",
            "tubepress_test"             : "src/test/php/classes"
        }
    }
}
