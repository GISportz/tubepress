{
    "name"        : "tubepress/tubepress",
    "description" : "Modern video galleries for the web.",
    "homepage"    : "https://github.com/tubepress/tubepress",
    "license"     : "MPL-2.0",
    "authors" : [
        {
            "name"     : "TubePress LLC",
            "email"    : "eric@tubepress.org",
            "homepage" : "http://tubepress.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "ehough/finder"      : "~2.5.0",
        "ehough/iconic"      : "~2.5.0",
        "ehough/pulsar"      : "~2.5.0",
        "ehough/stash"       : "~0.12.0",
        "ehough/tickertape"  : "~2.5.0",
        "ehough/templating"  : "~2.5.0",
        "puzzlehttp/puzzle"  : "~4.2.0",
        "twig/twig"          : "1.*"
    },
    "require-dev": {
        "ehough/mockery"       : "~0.8",
        "phpunit/phpunit"      : "~3.0",
        "symfony/class-loader" : "dev-master",
        "symfony/dom-crawler"  : "dev-master",
        "symfony/css-selector" : "dev-master"
    },
    "autoload": {
        "psr-0": {

            "tubepress_app_"       : "src/add-ons/core/classes",
            "tubepress_lib_"       : "src/add-ons/core/classes",
            "tubepress_platform_"  : "src/platform/classes",

            "tubepress_deprecated_" : "src/add-ons/deprecated/classes",
            "tubepress_api_const_"  : "src/add-ons/deprecated/classes",
            "tubepress_addons_"     : "src/add-ons/deprecated/classes",

            "tubepress_embedplus_" : "src/add-ons/embedplus/classes",
            "tubepress_jwplayer5_" : "src/add-ons/jwplayer5/classes",
            "tubepress_vimeo2_"    : "src/add-ons/vimeo_v2/classes",
            "tubepress_wordpress_" : "src/add-ons/wordpress/classes",
            "tubepress_youtube2_"  : "src/add-ons/youtube_v2/classes",

            "tubepress_test_integration_"  : "tests/integration/classes",
            "tubepress_test_platform_"     : "tests/unit/platform/classes",
            "tubepress_test_app_"          : "tests/unit/add-ons/core/classes",
            "tubepress_test_lib_"          : "tests/unit/add-ons/core/classes",
            "tubepress_test_boot_"         : "tests/unit/platform/fixtures/mock-user-content-dir/add-ons/bootmocks/classes",
            "tubepress_test_translations_" : "tests/unit/translations/classes",
            "tubepress_test_"              : "tests/unit/add-ons/core/classes"
        }
    }
}
