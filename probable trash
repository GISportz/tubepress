 /**
     * Returns the group of options related to whether or not to display
     * video meta values.
     */
	function getMetaOptions()
	{
		return
		    array(TP_VID_TITLE => $this->_allOptions[TP_VID_TITLE],
		          TP_VID_LENGTH => $this->_allOptions[TP_VID_LENGTH],
		          TP_VID_VIEW => $this->_allOptions[TP_VID_VIEW],
		          TP_VID_AUTHOR => $this->_allOptions[TP_VID_AUTHOR],
		          TP_VID_ID => $this->_allOptions[TP_VID_ID],
		          TP_VID_RATING_AVG => $this->_allOptions[TP_VID_RATING_AVG],
		          TP_VID_RATING_CNT => $this->_allOptions[TP_VID_RATING_CNT],
		          TP_VID_UPLOAD_TIME => $this->_allOptions[TP_VID_UPLOAD_TIME],
		          TP_VID_COMMENT_CNT => $this->_allOptions[TP_VID_COMMENT_CNT],
		          TP_VID_TAGS => $this->_allOptions[TP_VID_TAGS],
		          TP_VID_URL => $this->_allOptions[TP_VID_URL],
		          TP_VID_THUMBURL => $this->_allOptions[TP_VID_THUMBURL],
		          TP_VID_DESC => $this->_allOptions[TP_VID_DESC]
		);
	}
	
	
	
	/**
	 * Returns the group of "options" that hold values for the "searchBy" options
	 */
	function getSearchByValues()
	{
		return
		    array(TP_OPT_SEARCHBY => $this->_allOptions[TP_OPT_SEARCHBY],
		          TP_SRCH_TAGVAL => $this->_allOptions[TP_SRCH_TAGVAL],
		          TP_SRCH_RELVAL => $this->_allOptions[TP_SRCH_RELVAL],
		          TP_SRCH_USERVAL => $this->_allOptions[TP_SRCH_USERVAL],
		          TP_SRCH_PLSTVAL => $this->_allOptions[TP_SRCH_PLSTVAL],
		          TP_SRCH_FAVVAL => $this->_allOptions[TP_SRCH_FAVVAL],
		          TP_SRCH_POPVAL => $this->_allOptions[TP_SRCH_POPVAL]
		);
	}
	
	/**
	 * Returns the group of video display options
	 */
	function getDisplayOptions()
	{
		return
		    array(TP_OPT_VIDSPERPAGE => $this->_allOptions[TP_OPT_VIDSPERPAGE],
		          TP_OPT_VIDWIDTH => $this->_allOptions[TP_OPT_VIDWIDTH],
		          TP_OPT_VIDHEIGHT => $this->_allOptions[TP_OPT_VIDHEIGHT],
		          TP_OPT_THUMBWIDTH => $this->_allOptions[TP_OPT_THUMBWIDTH],
		          TP_OPT_THUMBHEIGHT => $this->_allOptions[TP_OPT_THUMBHEIGHT]
		);
	}
	
	/**
	 * Returns the group of advanced options.
	 */
	function getAdvancedOptions()
	{
		return
		    array(TP_OPT_KEYWORD => $this->_allOptions[TP_OPT_KEYWORD],
		          TP_OPT_TIMEOUT => $this->_allOptions[TP_OPT_TIMEOUT],
		          TP_OPT_DEVID => $this->_allOptions[TP_OPT_DEVID],
		          TP_OPT_USERNAME => $this->_allOptions[TP_OPT_USERNAME],
		          TP_DEBUG_ON => $this->_allOptions[TP_DEBUG_ON]
		);
	}